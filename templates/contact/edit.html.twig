{% extends 'base.html.twig' %}

{% block title %}{{'messages.appTitle' | trans }}{% endblock %}

{% block message %}
    {% for msg in app.session.flashBag.get('success') %}
	<div class="alert alert-success margin-top-13">
	    {{ msg | trans}}
	</div>
    {% endfor %}
    {% for msg in app.session.flashBag.get('error') %}
	<div class="alert alert-danger margin-top-13">
	    {{ msg | trans}}
	</div>
    {% endfor %}
{% endblock %}

{% block body %}
    <main class="container-fluid">
	<div class="mt-2">
	{{ include('contact/_form.html.twig',{
	    'readonly': readonly,
	    'new': new,
			    }) }}
	</div>
    </main>
{% endblock body %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('contact_edit_view') }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('contact_edit_view') }}
{% endblock javascripts %}
